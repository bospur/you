{
  // extends позволяет обогатить опции другими опциями из указанного файла
  // "extends": "./какой то файл.json,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
}
